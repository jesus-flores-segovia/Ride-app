<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_rutas_salir2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_rutas_farRoute"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/botonsign"
        android:onClick="returnMain"
        android:text="Salir"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/tv_rutas_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="¿Deseas terminar?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_rutas_farRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rutas_gps"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Puedes guardar el recorrido si lo deseas." />

    <Button
        android:id="@+id/btn_rutas_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_rutas_atras"
        android:layout_alignBottom="@+id/btn_rutas_atras"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/btn_rutas_atras"
        android:background="@drawable/botonsign"
        android:onClick="guardar"
        android:text="Guardar"
        android:textColor="@color/blanco" />

    <Button
        android:id="@+id/btn_rutas_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rutas_farRoute"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btn_rutas_salir2"
        android:background="@drawable/botonsign"
        android:onClick="atras"
        android:text="Atrás"
        android:textColor="@color/blanco" />
</RelativeLayout>