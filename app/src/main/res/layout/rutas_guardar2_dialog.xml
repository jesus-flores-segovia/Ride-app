<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_rutas_salir4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_rutas_farRoute"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/botonsign"
        android:onClick="salir_sin_guardar"
        android:text="Salir"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/tv_rutas_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="¿Te vas a ir sin guardar?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_rutas_farRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rutas_gps"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Si te vas, los datos de la ruta no serán guardados." />

    <Button
        android:id="@+id/btn_rutas_guardar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_rutas_salir4"
        android:layout_alignBottom="@+id/btn_rutas_salir4"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/btn_rutas_salir4"
        android:background="@drawable/botonsign"
        android:onClick="guardar_ruta"
        android:text="Guardar"
        android:textColor="@color/blanco" />

</RelativeLayout>