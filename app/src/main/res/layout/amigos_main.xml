<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoVentanaPrincipal"
    tools:context="com.example.juanjo.rideapp.Amigos.Amigos_main"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rutas_guardar_ruta_relativelayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/search"
            android:layout_width="280dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="#41ffffff"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="41dp" />

        <ListView
            android:id="@+id/amigos_lv"
            android:layout_width="280dp"
            android:layout_height="365dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="#64ffffff"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="99dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
